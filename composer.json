{
    "name": "FireWork/login-with-google",
    "description": "WordPress plugin to let users login with google.",
    "license": "GPL 2.0",
    "authors": [
        {
            "name": "FireWork",
            "email": "contact@FireWork.com",
            "homepage": "https://FireWork.com/",
            "role": "Developer"
        },
        {
            "name": "Utkarsh Patel",
            "email": "itismeutkarsh@gmail.com"
        },
        {
            "name": "Paul Clark",
            "role": "Developer"
        },
        {
            "name": "Ankit Gade",
            "email": "ankit.gade@FireWork.com",
            "homepage": "https://iamank.it/",
            "role": "Developer"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.1",
        "pimple/pimple": "3.5.*"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.7.1",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.2",
        "wp-coding-standards/wpcs": "^2.3",
        "sirbrillig/phpcs-variable-analysis": "^v2.11.3",
        "automattic/vipwpcs": "^2.3.3",
        "phpcompatibility/phpcompatibility-wp": "^2.1.3",
        "phpunit/phpunit": "9.5",
        "10up/wp_mock": "0.4.2"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "autoload": {
        "psr-4": {
            "FireWork\\GoogleLogin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FireWork\\GoogleLogin\\Tests\\": "tests/php"
        }
    },
    "scripts": {
        "cs": "@php ./vendor/bin/phpcs",
        "cs:fix": "@php ./vendor/bin/phpcbf",
        "tests:unit": "@php ./vendor/bin/phpunit tests/php/Unit/",
        "qa": [
            "@cs",
            "@tests"
        ]
    }
}
